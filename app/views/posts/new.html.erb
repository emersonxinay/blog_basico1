
<div class="container">
  <h1>crea tu post </h1>
  <%= form_with() do |f| %>
    <%= f.label :titulo, class: "form-label"%>
    <%= f.text_field  :title, class: "form-control" %>

    <%= f.label :contenido %>
    <%= f.text_field  :content, class: "form-control" %>

    <%= f.label :image_url %>
    <%= f.text_field  :image_url, class: "form-control" %>

    <%= f.submit "Crear Post", class: "btn btn-primary my-3" %>



  <% end %>
</div>


